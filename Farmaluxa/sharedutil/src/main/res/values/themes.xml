<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Farmaluxa" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow_700</item>
        <item name="colorSecondaryVariant">@color/yellow_700_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <style name="toolbar_header" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/bevietnampro_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_twenty</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Set parent theme as app theme. -->
    <style name="DialogTheme" parent="Theme.Farmaluxa">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>