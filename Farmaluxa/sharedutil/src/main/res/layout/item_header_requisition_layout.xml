<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_primary"
    android:padding="@dimen/dimen_sixteen">

    <ImageButton
        android:id="@+id/iBtnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/desc_menu"
        android:src="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tvAppName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_ten"
        android:fontFamily="@font/bevietnampro_light"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_twenty"
        app:layout_constraintBottom_toBottomOf="@+id/iBtnMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iBtnMenu"
        app:layout_constraintTop_toTopOf="@+id/iBtnMenu" />


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_eighteen"
        android:layout_marginTop="@dimen/dimen_fourteen"
        android:layout_marginEnd="@dimen/dimen_eight"
        android:fontFamily="@font/bevietnampro_bold"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_twenty_eight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iBtnAddProducts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iBtnMenu"
        tools:text="Titulo" />

    <ImageButton
        android:id="@+id/iBtnAddProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_twenty_eight"
        android:background="?attr/selectableItemBackground"
        android:contentDescription="@string/desc_add_products"
        android:src="@drawable/ic_add_circle"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppName"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>