<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.dialog.product.NewProductDialogFragment">

    <include
        android:id="@+id/iToolbar"
        layout="@layout/item_header_product_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <include
        android:id="@+id/iFormulary"
        layout="@layout/item_new_products_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dimen_thirty_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iToolbar"
        app:layout_constraintBottom_toTopOf="@+id/btnAddProduct"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/str_new_product"
        app:cornerRadius="@dimen/dimen_thirty"
        android:textSize="@dimen/txt_seventeen"
        android:textAllCaps="false"
        android:fontFamily="@font/bevietnampro_bold"
        android:padding="@dimen/dimen_fifteen"
        android:layout_marginStart="@dimen/dimen_twenty_four"
        android:layout_marginEnd="@dimen/dimen_twenty_four"
        android:layout_marginTop="@dimen/dimen_fifteen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dimen_thirty_three"/>

</androidx.constraintlayout.widget.ConstraintLayout>